doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        title= content.cat_name
        link(rel='stylesheet' href='/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        header.top
            .container
                h1 Chat  

        main.container
            h2= content[0].cat_name

            ul.row.roomList
                each room in content
                    li.col-xs-12.col-sm-6.col-md-3
                        a(href=`/${room.cat_url}/${room.room_url}`)= room.room_name
        