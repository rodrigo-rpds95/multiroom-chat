doctype html
html(lang="pt-br")
    head
        meta(charset="UTF-8")
        title= page_name
        link(rel='stylesheet' href='/css/bootstrap.min.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        header.top
            .container
                h1 Chat 

        main.container.page           

            div.boxCenter
                h2= page_name

                if validacao.length
                    ul.listErrors
                        each val, index in validacao
                            li= val.msg

                form(action=url, method='post')
                    input(type="text" name="nick" placeholder="Type your name")
                    br
                    button(type="submit") Entrar